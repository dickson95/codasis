<br><br>
    <h2><center><b>PERMISOS</b></center></h2>
      <br><br>
       <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th class="center">USUARIO</th>
              <th class="center">ROL</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <tbody>
              <% @assignments.each do |assignment| %>
                <tr>
                  <td class="center"><%= assignment.user.try(:name) %></td>
                  <td class="center"><%= assignment.rol.try(:name) %></td>
                  <td><%= link_to '<i class="fa fa-eye fa-2x" title="MOSTRAR"></i>'.html_safe, assignment, remote: true %></td>
                  <td><%= link_to '<i class="fa fa-pencil-square fa-2x" title="EDITAR"></i>'.html_safe, edit_assignment_path(assignment) %></td>
                  <td><%= link_to '<i class="fa fa-times fa-2x" title="ELIMINAR"></i>'.html_safe, assignment, method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar este registro?' } %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>  
      <br>
    <%= link_to '<i class="fa fa-plus-square fa-2x" title="NUEVA ASIGNACION"></i>'.html_safe, new_assignment_path %>
&nbsp; &nbsp; <%= link_to '<i class="fa fa-reply fa-2x" title="ATRAS"></i>'.html_safe, assignments_path %>
<%#ok%>