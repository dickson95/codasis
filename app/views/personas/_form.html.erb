<br>
<div class="col-md-offset-2 col-md-8">
  <%= simple_form_for(@persona) do |f| %>
    <% if persona.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(persona.errors.count, "error") %> No se puede crear un nuevo registro porque:</h2>
          <ul>
            <% persona.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.label :nombre %>
          <%= f.text_field :nombres, :required => true, class:'form-control' %>
        </div>  
        <div class="col-xs-6">
          <%= f.label :documento %>
          <%= f.text_field :documento, :required => true, class:'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :empresa %>
          <%= f.text_field :empresa, :required => true, class:'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :email %>
          <%= f.text_field :email, class:'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :telefono %>
          <%= f.text_field :telefono, :required => true, class:'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :codigo %>
          <%= f.text_field :codigo, :required => true, class:'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.association :cargo %>
        </div>
      </div>
        <br>
          <ul>
            <%= button_tag(type: "submit", class: "clase-boton") do %>
              <i class="fa fa-floppy-o fa-2x" title="GUARDAR"></i>
            <% end %>
            &nbsp; &nbsp;<%= link_to '<i class="fa fa-reply fa-2x" title="ATRAS"></i>'.html_safe, personas_path %>
          </ul>
          <% if @mostrar == true %>
            <%= link_to '<i class="fa fa-eye fa-2x" title="MOSTRAR"></i>'.html_safe, @persona %>
          <% end %>
        <br>
  <% end %>
</div>
<%#ok%>