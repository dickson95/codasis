<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><center><%= t('.title', :resource => resource_class.model_name.human , :default => "Editar usuario") %></center></h4>
  </div>
  <div class="col-md-offset-4 col-md-4">
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <div class="form-group">
        <%= f.label :nombre %><br/>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :correo %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :contraseña %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "Dejar en blanco si no desea cambiarlo") %>)</i>
        <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :confirmar_contraseña %>
        <%= f.password_field :password_confirmation, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :contraseña_actual %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', :default => 'Necesitamos su contraseña actual para confirmar los cambios') %>)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
      <%= f.submit t('.update', :default => "Actualizar"), class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
</div>

<p><%= t('.unhappy', :default => 'Inconforme') %>? <%= link_to t('.cancel_my_account', :default => "Cancelar mi cuenta"), registration_path(resource_name), :data => { :confirm => t('.are_you_sure', :default => "Estás seguro?") }, :method => :delete %>.</p>

<%= link_to t('.back', :default => 'Atras'), :back %>
