<br>
  <h2><center><b>LISTA DE USUARIOS</b></center></h2>
  <br><br>
  <div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th class="center">NOMBRE</th>
        <th class="center">EMAIL</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="center"><%= user.name %></td>
          <td class="center"><%= user.email %></td>
          <td><%= link_to '<i class="fa fa-eye fa-2x" title="MOSTRAR"></i>'.html_safe, user, remote: true %></td>
          <td><%= link_to '<i class="fa fa-pencil-square fa-2x" title="EDITAR"></i>'.html_safe, edit_user_path(user) %></td>
          <td><%= link_to '<i class="fa fa-times fa-2x" title="ELIMINAR"></i>'.html_safe, user, method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar este registro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>
<%= link_to '<i class="fa fa-plus-square fa-2x" title="NUEVO USUARIO"></i>'.html_safe, new_user_path %>
&nbsp; &nbsp; <%= link_to '<i class="fa fa-reply fa-2x" title="ATRAS"></i>'.html_safe, users_path %>



