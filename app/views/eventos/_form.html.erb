<br>
<div class="col-md-offset-">
  <%= simple_form_for(@evento) do |f| %> 
    <% if evento.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(evento.errors.count, "error") %> No se puede guardar los datos, error en uno de los campos:</h2>
          <ul>
            <% evento.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
      <div class="row">
        <div class="col-md-3">
          <%= f.label :asunto %>
          <%= f.text_field :asunto, :required => true, class:'form-control' %>
        </div>
        <div class="col-md-3 col-sm-14">
          <%= f.input :fecha, as: :datetime_picker, readonly: true,
                  input_html: {value: evento.fecha.try(:strftime, '%d/%m/%Y'),
                      data: {date_options: {format: 'DD/MM/YYYY', ignoreReadonly: true}}} %>
        </div>
        <div class="col-md-3">
          <%= f.label :ubicacion %>
          <%= f.text_field :ubicacion, :required => true, class:'form-control' %>
        </div>
        <div class="col-md-3">
          <%=f.input :hora%>
        </div> 
      </div>
    <hr>
      <h2><center><b>Personas Asistentes</b></center></h2>
      <br>
        <div class="compact">
          <%= f.fields_for :personas do |personas_for_form| %>
            <%= render 'persona_fields', f: personas_for_form %>
          <% end %>
          <%= link_to_add_fields "Agregar", f, :personas %>
        </div>
      <div class="actions">
        <%= f.submit "Guardar", class: "btn btn-default btn-md"%>
      </div>
  <% end %>
    <% if @mostrar == true %>
      <%= link_to '<i class="fa fa-eye fa-2x" title="MOSTRAR"></i>'.html_safe, @evento %>
    <% end %>
    <br>
      <%= link_to '<i class="fa fa-reply fa-2x" title="ATRAS"></i>'.html_safe, eventos_path %>
</div>
